.absolute.inset-x-0.top-0.origin-top-right.transform.p-2.transition.md:hidden
  .divide-y-2.divide-gray-50.rounded-lg.bg-white.shadow-lg.ring-1.ring-black.ring-opacity-5
    .px-5.pt-5.pb-6
      .flex.items-center.justify-between
        %div
          %img.h-8.w-auto{alt: "Your Company", src: "https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"}/
        .-mr-2
          %button.inline-flex.items-center.justify-center.rounded-md.bg-white.p-2.text-gray-400.hover:bg-gray-100.hover:text-gray-500.focus:outline-none.focus:ring-2.focus:ring-inset.focus:ring-indigo-500{type: "button"}
            %span.sr-only Close menu
            %svg.h-6.w-6{"aria-hidden" => "true", fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24"}
              %path{d: "M6 18L18 6M6 6l12 12", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
    .space-y-6.py-6.px-5
      .grid.grid-cols-2.gap-y-4.gap-x-8
        = link_to root_path, class:'text-base font-medium text-gray-500 hover:text-gray-900' do
          %span.screen-reader Home
        %a.text-base.font-medium.text-gray-900.hover:text-gray-700{href: "#"} Pricing
        %a.text-base.font-medium.text-gray-900.hover:text-gray-700{href: "#"} Docs
        
      %div
        - if !user_signed_in?
          - if controller_name != 'registrations'
            = link_to "Sign up", new_registration_path(:user), class: 'flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700'
          - if controller_name != 'sessions'
            %p.mt-6.text-center.text-base.font-medium.text-gray-500
              Existing customer?
            = link_to " Sign in", new_session_path(:user),class: 'text-indigo-600 hover:text-indigo-500'
        - else
          = button_to "Logout", destroy_user_session_path(), class: 'ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700', method: :delete


      