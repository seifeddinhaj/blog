!!!
%html.h-full.bg-gray-50
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title BlogTest
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "tailwind", "data-turbo-track": "reload"

    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags

    = javascript_include_tag Ckeditor.cdn_url
    %script{src: "https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"}
  %body.h-screen.flex.flex-col.justify-between
    = render 'layouts/headers/header'
    - if notice
      %p.w-full#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.flex.items-center.justify-center= notice
    - if alert
      %p.w-full#notice.py-2.px-3.bg-red-50.mb-5.text-red-500.font-medium.rounded-lg.flex.items-center.justify-center= alert
    - if controller_name != 'home'
      = yield
    - else
      .flex.px-4.py-2

        %div{class: "md:w-1/3"}
          = render 'layouts/sidebars/sidebar'
        %div{class: "md:w-2/3"}
          = yield
    = render 'layouts/footer/footer'

